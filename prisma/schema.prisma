generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Meal {
  id        Int      @id @default(autoincrement())
  date      DateTime
  mealType  String   // 아침/점심/저녁/간식
  foodName  String
  calories  Int
  carbs     Float
  protein   Float
  fat       Float
  createdAt DateTime @default(now())
}
